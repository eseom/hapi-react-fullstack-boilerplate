{
  "name": "react-hapi-fullstack-boilerplate",
  "description": "a fullstack react webapp with redux, hmr, hapi, sequelize",
  "author": "EunseomEom <me@eseom.org> (http://github.com/eseom)",
  "license": "MIT",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/eseom/react-hapi-fullstack-boilerplate"
  },
  "homepage": "https://github.com/eseom/react-hapi-fullstack-boilerplate",
  "keywords": [
    "react",
    "isomorphic",
    "universal",
    "webpack",
    "hapi",
    "sequelize",
    "hot reloading",
    "react-hot-reloader",
    "redux",
    "starter",
    "boilerplate",
    "babel"
  ],
  "babel": {
    "presets": [
      [
        "env",
        {
          "es2015": true
        }
      ],
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "main": "bin/server.js",
  "scripts": {
    "start": "npm-run-all server",
    "server": "better-npm-run server",
    "exec": "better-npm-run exec",
    "build": "better-npm-run build",
    "postinstall": "node node_modules/phantomjs-prebuilt/install.js; yarn build",
    "lint": "eslint -c .eslintrc src",
    "dev": "rm webpack-assets.json; npm-run-all --parallel dev:*",
    "dev:server": "better-npm-run dev:server",
    "dev:packager": "better-npm-run dev:packager",
    "test": "karma start",
    "test:node": "better-npm-run test:node",
    "test:node:watch": "better-npm-run test:node:watch",
    "db:upgrade": "sequelize db:migrate",
    "db:downgrade": "sequelize db:migrate:undo",
    "db:create": "sequelize migration:create",
    "db:status": "sequelize db:migrate:status"
  },
  "betterScripts": {
    "server": {
      "command": "node bin/server",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production"
      }
    },
    "exec": {
      "command": "node bin/console",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "dev:server": {
      "command": "nodemon bin/server",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development"
      }
    },
    "dev:packager": {
      "command": "node bin/packager",
      "env": {
        "NODE_PATH": "./src"
      }
    },
    "build": {
      "command": "webpack --verbose --colors --display-error-details --config ./tools/webpack.production.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test:node": {
      "command": "mocha $(find src/server -name '*-test.js') --compilers js:./tools/babel-require",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "test:node:watch": {
      "command": "mocha $(find src/server -name '*-test.js') --compilers js:./tools/babel-require --watch",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "dependencies": {
    "autoprefixer": "^6.7.6",
    "babel-eslint": "^7.2.2",
    "babel-loader": "^6.3.2",
    "babel-plugin-syntax-decorators": "^6.13.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.2.1",
    "babel-preset-latest": "^6.22.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.23.0",
    "bcrypt-nodejs": "^0.0.3",
    "better-npm-run": "^0.0.14",
    "bootstrap": "4.0.0-alpha.6",
    "cheerio": "^0.22.0",
    "google-map-react": "^0.22.3",
    "hails": "^0.1.17",
    "hapi-nested-route": "^0.1.1",
    "karma-cli": "^1.0.1",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "phantomjs-prebuilt": "^2.1.14",
    "pretty-error": "^2.0.2",
    "react": "^15.4.2",
    "react-addons-css-transition-group": "^15.4.2",
    "react-addons-transition-group": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-facebook-login": "^3.6.2",
    "react-helmet": "^4.0.0",
    "react-redux": "^5.0.3",
    "react-router": "^3.0.2",
    "react-router-redux": "^4.0.8",
    "redux": "^3.6.0",
    "redux-connect": "^5.0.0",
    "redux-form": "^6.5.0",
    "redux-thunk": "^2.2.0",
    "scroll-behavior": "0.3.2",
    "serialize-javascript": "^1.3.0",
    "superagent": "^3.5.0",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "clean-webpack-plugin": "^0.1.15",
    "css-loader": "^0.26.2",
    "eslint": "^3.17.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.0",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.10.1",
    "karma": "^1.5.0",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.2",
    "react-addons-test-utils": "^15.4.2",
    "sass-loader": "^6.0.3",
    "strip-loader": "^0.1.2",
    "style-loader": "^0.13.2",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-hot-middleware": "^2.17.1",
    "webpack-isomorphic-tools": "^3.0.1"
  },
  "engines": {
    "node": "8.0.0",
    "npm": "5.0.0",
    "yarn": "0.24.5"
  }
}
